{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build current file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++20",
                "-O2",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Build the currently open C++ file"
        }
    ]
}